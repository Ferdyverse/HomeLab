---
services:
  n8n:
    image: docker.n8n.io/n8nio/n8n
    ports:
      - '5678:5678'
    environment:
      - N8N_HOST=${N8N_DOMAIN}
      - N8N_PORT=5678
      - N8N_PROTOCOL=https
      - NODE_ENV=production
      - WEBHOOK_URL=${N8N_DOMAIN}
      - GENERIC_TIMEZONE="Europe/Berlin"
      - TZ="Europe/Berlin"
    volumes:
      - /data/n8n:/home/node/.n8n

