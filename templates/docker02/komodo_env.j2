COMPOSE_KOMODO_IMAGE_TAG=latest

## DB credentials
KOMODO_DB_USERNAME=admin
KOMODO_DB_PASSWORD={{ lookup("community.general.onepassword", "Komodo", section="Keys", field="mongodb", vault="HomeLab") }}

