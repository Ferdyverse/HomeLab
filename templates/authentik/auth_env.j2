# Postgress PW
PG_PASS={{ lookup("community.general.onepassword", "Authentik", field="PG Password", vault="HomeLab") }}

# SECRET KEY
AUTHENTIK_SECRET_KEY={{ lookup("community.general.onepassword", "Authentik", field="Secret key", vault="HomeLab") }}

# Error Reporting
AUTHENTIK_ERROR_REPORTING__ENABLED=true

# Ports
COMPOSE_PORT_HTTP=80
COMPOSE_PORT_HTTPS=443

# SMTP Host Emails are sent to
AUTHENTIK_EMAIL__HOST={{ lookup("community.general.onepassword", "Authentik", field="EMail Server", vault="HomeLab") }}
AUTHENTIK_EMAIL__PORT=465
# Optionally authenticate (don't add quotation marks to your password)
AUTHENTIK_EMAIL__USERNAME=authentik@berger-em.de
AUTHENTIK_EMAIL__PASSWORD={{ lookup("community.general.onepassword", "Authentik", field="EMail Password", vault="HomeLab") }}
# Use StartTLS
AUTHENTIK_EMAIL__USE_TLS=false
# Use SSL
AUTHENTIK_EMAIL__USE_SSL=true
AUTHENTIK_EMAIL__TIMEOUT=10
# Email address authentik will send from, should have a correct @domain
AUTHENTIK_EMAIL__FROM=authentik@berger-em.de